<Window x:Class="Engin3D.PhongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Engin3D"
        mc:Ignorable="d"
        Title="PhongWindow" Height="300" Width="300">
    <Grid Margin="10, 20, 0, 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Label Content="Light position (X, Y, Z)" VerticalAlignment="Center" Grid.Column="0"/>
        <TextBox x:Name="lightPosX" Height="20" Width="40" Grid.Column="1" Margin="0, 0, 0, 0" HorizontalAlignment="Left"/>
        <TextBox x:Name="lightPosY" Height="20" Width="40" Grid.Column="1" Margin="50, 0, 0, 0" HorizontalAlignment="Left"/>
        <TextBox x:Name="lightPosZ" Height="20" Width="40" Grid.Column="1" Margin="100, 0, 0, 0" HorizontalAlignment="Left"/>

        <Label Content="Ambient (R, G, B)" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1"/>
        <TextBox x:Name="ambientR" Height="20" Width="40" Grid.Column="1" Grid.Row="1" Margin="0, 0, 0, 0" HorizontalAlignment="Left"/>
        <TextBox x:Name="ambientG" Height="20" Width="40" Grid.Column="1" Grid.Row="1"  Margin="50, 0, 0, 0" HorizontalAlignment="Left"/>
        <TextBox x:Name="ambientB" Height="20" Width="40" Grid.Column="1" Grid.Row="1" Margin="100, 0, 0, 0" HorizontalAlignment="Left"/>

        <Label Content="Diffuse (R, G, B)" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2"/>
        <TextBox x:Name="diffuseR" Height="20" Width="40" Grid.Column="1" Grid.Row="2" Margin="0, 0, 0, 0" HorizontalAlignment="Left"/>
        <TextBox x:Name="diffuseG" Height="20" Width="40" Grid.Column="1" Grid.Row="2"  Margin="50, 0, 0, 0" HorizontalAlignment="Left"/>
        <TextBox x:Name="diffuseB" Height="20" Width="40" Grid.Column="1" Grid.Row="2" Margin="100, 0, 0, 0" HorizontalAlignment="Left"/>

        <Label Content="Specular (R, G, B)" VerticalAlignment="Center" Grid.Column="0" Grid.Row="3"/>
        <TextBox x:Name="specularR" Height="20" Width="40" Grid.Column="1" Grid.Row="3" Margin="0, 0, 0, 0" HorizontalAlignment="Left"/>
        <TextBox x:Name="specularG" Height="20" Width="40" Grid.Column="1" Grid.Row="3"  Margin="50, 0, 0, 0" HorizontalAlignment="Left"/>
        <TextBox x:Name="specularB" Height="20" Width="40" Grid.Column="1" Grid.Row="3" Margin="100, 0, 0, 0" HorizontalAlignment="Left"/>

        <Label Content="Specular power" VerticalAlignment="Center" Grid.Column="0" Grid.Row="4"/>
        <TextBox x:Name="specularPow" Height="20" Width="40" Grid.Column="1" Grid.Row="4" Margin="0, 0, 0, 0" HorizontalAlignment="Left"/>

        <Button Content="Accept" Grid.Column="1" Grid.Row="5" Height="30" Width="70" Click="Button_Click"/>
    </Grid>
</Window>